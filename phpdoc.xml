<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>

	<title>Redaxo Usage Check</title>
	<parser>
		<default-package-name>Redaxo-UsageCheck</default-package-name>
		<target>docs/phpdoc/cache/</target>
		<encoding>utf-8</encoding>
		<extensions>
			<extension>php</extension>
			<extension>phtml</extension>
		</extensions>
	</parser>
	<transformer>
		<target>docs/phpdoc/output/</target>
	</transformer>
	<files>
		<directory>*</directory>
		<ignore>pages/*</ignore>
		<ignore>general/*</ignore>
		<ignore>vendor/*</ignore>
		<ignore>node_modules/*</ignore>
		<ignore>server.php</ignore>
	</files>
	<logging>
		<level>warn</level>
		<paths>
			<default>docs/phpdoc/log/{DATE}.log</default>
			<errors>docs/phpdoc/log/{DATE}.errors.log</errors>
		</paths>
	</logging>
	<transformations>
		<!--
abstract				=> OK
checkstyle			=> generiert nur ne XML mit den Fehlern
clean					=> std
new-black			=> OK, aber Fehlerhafter output
old-ocean			=> OK
pdf					=> Fatal Error
responsive			=> OK
responsive-twig	=> OK
xml					=> OK
zend					=> Fatal Error
		-->
		<template name="clean" />
	</transformations>
</phpdocumentor>