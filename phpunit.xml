<phpunit colors="true" bootstrap="akrys/redaxo/addon/UsageCheck/Tests/bootstrap.php">
	<testsuites>
		<!-- testsuites für Abfragen -->
		<testsuite name="classes">
			<directory>akrys/redaxo/addon/UsageCheck/Tests</directory>
		</testsuite>
		<!-- testsuites für Abfragen -->
	</testsuites>
	<filter>
		<whitelist>

			<directory suffix=".php">.</directory>

			<exclude>
				<directory>./vendor/</directory>
				<directory>./node_modules/</directory>

				<!--Ich fange jetzt nicht noch an meine Tests zu testen ;-)  -->
				<directory suffix=".php">./akrys/redaxo/addon/UsageCheck/Tests/</directory>

				<!--
					"pages/" Sollte keine Logik enthalten, die automatisiert getestet werden müsste.
					Wenn was schief geht, sollte man es eigentlich sofort sehen. ;-)
				-->
				<directory>./pages/</directory>
				<directory>./fragments/</directory>


				<!-- Redaxo 5 Addon Files -->
				<file>boot.php</file>
				<file>help.php</file>
				<file>install.php</file>
				<file>uninstall.php</file>

				<!-- Generelle Abstraktionen der Redaxo-Files -->
				<directory>./general/</directory>

			</exclude>
		</whitelist>
	</filter>


	<logging>
		<log type="coverage-html" target="./docs/phpunit/report" charset="UTF-8"
			  highlight="true" lowUpperBound="35" highLowerBound="70" />

		<log type="coverage-clover" target="./docs/phpunit/tmp/coverage.xml"/>
		<log type="coverage-php" target="./docs/phpunit/tmp/coverage.serialized"/>
		<log type="coverage-text" target="./docs/phpunit/log.txt" showUncoveredFiles="false"/>
		<log type="testdox-html" target="./docs/phpunit/testdox.html" />
	</logging>
</phpunit>
