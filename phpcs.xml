<?xml version="1.0"?>
<ruleset name="PSR2TAB">
	<description>The PSR-2 coding standard with TABs.</description>
	<rule ref="PSR2">
		<!--
			Einrückung mit Leerzeichen abschalten.
			Eine Einrückebene sollte semantisch nur mit einem Zeichen markiert werden.
			Außerdem kann man bei Tabs die Tiefe selbst bestimmen und ist nicht auf die 4 Leerzeichen beschränkt, wie bei
			PSR2 ja vorgeschrieben sind.
			Daher kurz und knapp: Ich nutze Tabs zum einrücken.
		-->
		<exclude name="Generic.WhiteSpace.DisallowTabIndent"/>

		<!-- Extends auf gleicher Zeile abschalten, zu unübersichtlich, finde ich -->
		<exclude name="PSR2.Classes.ClassDeclaration.ExtendsLine" />

		<!-- Implements auf gleicher Zeile abschalten, zu unübersichtlich, finde ich -->
		<exclude name="PSR2.Classes.ClassDeclaration.ImplementsLine" />
	</rule>

	<!-- Sicherstellen, dass mit Tabs eingerückt wird-->
	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>

	<!-- help.php und die release notes enthalten keinen PHP-Code -->
	<rule ref="Internal.NoCodeFound">
		<severity>0</severity>
	</rule>
</ruleset>
